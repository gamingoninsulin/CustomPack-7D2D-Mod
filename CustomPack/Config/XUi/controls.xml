<configs>
	<append xpath="/controls">
		<backpack_item_stack_custom>
				<rect controller="ItemStack" style="itemStackCustom, hover" collider_scale="1.1" >
				<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="-3,3" width="51" height="51" color="[black]" type="sliced" fillcenter="false" />	
				<sprite depth="3" name="background" sprite="menu_empty3px" width="47" height="47" color="[darkGrey]" type="sliced" globalopacity="true" fillcenter="false"/>
				<sprite depth="2" name="highlightOverlay" width="46" height="46" color="[darkGrey]" pos="0,0" type="sliced" globalopacity="true"/>
				
				<texture depth="3" name="backgroundTexture" material="Materials/Transparent Colored" size="45,45" globalopacity="true"/>
				
				<sprite depth="4" name="itemIcon" width="40" height="30" atlas="ItemIconAtlas" sprite="{itemicon}" pos="25,-20" pivot="center" foregroundlayer="true" color="{iconcolor}" />
				<sprite depth="8" name="lockTypeIcon" width="12" height="12" sprite="" pos="2,-2" foregroundlayer="true"/>
				
				<sprite depth="3" name="durabilityBackground" width="43" height="10" sprite="menu_empty3px" color="[darkGrey]" type="sliced" pos="1, -35" foregroundlayer="true"/>
				<filledsprite depth="4" name="durability" width="43" height="10" sprite="menu_empty2px" color="[transparent]" type="filled" pos="1, -35" foregroundlayer="true"/>
				
				<sprite depth="5" name="disabledOverlay" width="44" height="44" color="[darkGrey_half_alpha]" pos="1,-1" type="sliced" visible="false"/>
				
				<label depth="7" name="stackValue" pos="0,-30" width="42" height="28" text="{itemcount}" font_size="20" effect="outline" justify="center" />
				<label depth="7" name="timer" pos="35,-33" width="42" height="24" font_size="24" justify="center" pivot="center" effect="outline" color="[beige]"/>
				<sprite depth="9" name="cancel" sprite="ui_game_symbol_x" width="42" height="42" color="255,0,0,255" type="sliced" visible="false" foregroundlayer="true"/>
				
				<!--#$-IGS BEGIN: Setting itemName above the soft cursor. -$#-->
				<label depth="12" name="itemName" pos="36,-30" width="0" height="0" text="" font_size="25" justify="center" overflow="resizefreely" effect="outline" pivot="center" above_soft_cursor="true"/><!--*#$-IGS END.-$#-->
				<sprite depth="13" name="assembleIcon" size="35,35" sprite="{stacklockicon}" color="{stacklockcolor}" visible="{isassemblelocked}" pos="2,-2" foregroundlayer="true" />
			</rect>
		</backpack_item_stack_custom>
	</append>
</configs>
